#!/usr/bin/env node

/**
 * create-prompt CLI
 * Slim entry point - delegates to src/cli.js
 */

const { createCLI } = require('../src');

async function main() {
  const cli = createCLI();

  try {
    await cli.run(process.argv.slice(2));
  } catch (error) {
    console.error('\nError:', error.message);
    process.exit(1);
  }
}

main();
